<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kertas"
            android:textColor="@color/primary1"
            android:textSize="25sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/batu"
            android:textColor="@color/primary2"
            android:textSize="25sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gunting"
            android:textColor="@color/primary3"
            android:textSize="25sp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_1"
            android:textSize="17sp"
            android:textColor="@color/secondary2"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_2"
            android:textSize="17sp"
            android:textColor="@color/secondary2"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/kertasP1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_kertas"
            android:contentDescription="@string/image_kertas"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/kertasP2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_kertas"
            android:contentDescription="@string/image_kertas"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/batuP1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_batu"
            android:contentDescription="@string/image_batu"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/batuP2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_batu"
            android:contentDescription="@string/image_batu"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/guntingP1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_gunting"
            android:contentDescription="@string/image_gunting"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/guntingP2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_gunting"
            android:contentDescription="@string/image_gunting"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_refresh"/>

</LinearLayout>